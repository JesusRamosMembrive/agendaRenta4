# Flask Configuration
SECRET_KEY=your-secret-key-here
PORT=5000

# Database Configuration
# For LOCAL DEVELOPMENT (SQLite):
DATABASE_PATH=agendaRenta4.db

# For PRODUCTION (PostgreSQL) - Render will provide this automatically:
# DATABASE_URL=postgresql://user:password@host:port/database
# Leave commented for development, Render will inject it in production

# Email Configuration (SMTP)
# Para Gmail: smtp.gmail.com:587
# Para Outlook: smtp-mail.outlook.com:587
# Para Office365: smtp.office365.com:587
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Credenciales SMTP
# IMPORTANTE: Para Gmail, necesitas usar una "App Password" no tu contraseña normal
# Genera una en: https://myaccount.google.com/apppasswords
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-contraseña-o-app-password

# Email del remitente
MAIL_DEFAULT_SENDER=Agenda Renta4 <tu-email@gmail.com>

# Email configuration
MAIL_DEBUG=True
